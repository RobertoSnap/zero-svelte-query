{
	"name": "zero-svelte-query",
	"version": "0.3.0",
	"repository": "https://github.com/RobertoSnap/zero-svelte-query",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org"
	},
	"scripts": {
		"dev": "pnpm run-p dev:backend dev:vite",
		"dev:vite": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "pnpm run-p dev:backend vite:preview",
		"vite:preview": "vite preview",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"zero": "zero-cache --schema-file zero-schema.json",
		"zero:dev": "zero-cache-dev -p src/server/zero/schema.ts",
		"schema": "zero-build-schema -p src/zero/schema.ts",
		"db:generate": "drizzle-kit generate",
		"pretest": "pnpm drizzle-kit generate && pnpm run schema",
		"dev:backend": "pnpm drizzle-kit generate && pnpm run schema && TEST=true vite-node src/scripts/database-and-zero-server.ts",
		"release": "release-it",
		"release:beta:new:minor": "release-it minor --preRelease=beta",
		"release:beta:new:major": "release-it major --preRelease=beta",
		"release:beta:patch": "release-it --preRelease=beta",
		"release:beta:rc": "release-it --preRelease=rc"
	},
	"release-it": {
		"git": {
			"changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs"
		},
		"hooks": {
			"after:bump": "npx auto-changelog -p"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"@rocicorp/zero": "^0.14.2025020701",
		"svelte": "^5.19.2"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.6",
		"@eslint/js": "^9.19.0",
		"@playwright/test": "^1.50.1",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.17.1",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@testcontainers/postgresql": "^10.17.2",
		"@types/pg": "^8.11.11",
		"auto-changelog": "^2.5.0",
		"drizzle-kit": "^0.30.4",
		"drizzle-orm": "^0.38.4",
		"drizzle-zero": "^0.5.0",
		"eslint": "^9.19.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"npm-run-all2": "^7.0.2",
		"pg": "^8.13.1",
		"playwright": "^1.50.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.2",
		"release-it": "^18.1.2",
		"svelte": "^5.19.7",
		"svelte-check": "^4.1.4",
		"testcontainers": "^10.17.2",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.23.0",
		"vite": "^6.0.11",
		"vite-node": "^3.0.5",
		"vitest": "^3.0.5"
	}
}